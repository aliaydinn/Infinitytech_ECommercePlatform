
@model IQueryable<Category>


<div class="card-body">
    <h3 style="text-align:center;">Category Table</h3>
    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success" asp-area="Admin" asp-controller="Category" asp-action="AddCategory">
            <i class="fa-solid fa-plus"></i>
            Create
        </a>
    </div>
    <table class="table">
        <thead class="table-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">CreatedBy</th>
                <th scope="col">CreatedDate</th>
                <th scope="col">IsActive</th>
                <th scope="col">Transaction</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr name="@item.Id">
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <img src="@item.ImageUrl" class="rounded" style="width: 80px; height: auto;">
                    </td>
                    <td>@item.CreatedBy</td>
                    <td>@item.CreatedDate.ToShortDateString()</td>
                    <td>@(item.IsActive ? "Active" : "Passive")</td>
                    <td>
                        <a class="btn btn-info" asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-Id="@item.Id"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a>
                        &nbsp;
                        <a class="btn btn-dark" asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-categoryId="@item.Id"><i class="fa-solid fa-trash"></i></a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>



