@model ProductAddDto
<div class="card-body">
    <h4 class="card-title" style="font-weight:bold;">Product Add Page</h4>
    <form method="post" enctype="multipart/form-data" asp-area="Admin" asp-controller="Product" asp-action="AddProduct">
        <div asp-validation-summary="All" style="color:red;"></div>
        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
        </div>

        <div class="form-group">
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
        </div>
        <div class="form-group">
            <label asp-for="Price">Product Price</label>
            <input asp-for="Price" class="form-control" placeholder="Price">
        </div>
        <div class="form-group">
            <label asp-for="Information">Product Information</label>
            <textarea class="form-control" rows="15" asp-for="Information"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Information">Product BriefInformation</label>
            <textarea class="form-control" rows="3" asp-for="BriefInformation"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">Product Image</label>
            <input class="form-control" type="file" name="file">
        </div>
        <button type="submit" class="btn btn-primary mr-2">Save</button>
        <button class="btn btn-warning" asp-controller="Product" asp-action="Index">Cancel</button>
    </form>
</div>
