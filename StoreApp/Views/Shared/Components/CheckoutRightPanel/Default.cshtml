@model Cart
<div class="checkout__order">
    <h4 style="font-size: 28px; font-weight: bold; color: #333;">Siparişiniz</h4>
    <div class="checkout__order__products" style="font-size: 18px; font-weight: bold; color: #333;">
        Ürün/Ürünler <span>Toplam</span>
    </div>
    @foreach (var item in Model.Lines)
    {
        <ul style="list-style-type: none; padding: 0;">
            <li style="font-size: 16px; margin-bottom: 10px;">
                @item.Product.Name
                <span style="float: right;">@item.Product.Price.ToString("C2") x @item.Quantity</span>
            </li>
        </ul>
    }
    <div class="checkout__order__subtotal" style="font-size: 18px; font-weight: bold; color: #333;">
        Ara Toplam <span>@Model.Total().ToString("C2")</span>
    </div>
    <div class="checkout__order__total" style="font-size: 20px; font-weight: bold; ">
        Toplam Tutar <span style="color: green;">@Model.Total().ToString("C2")</span>
    </div>

    
</div>
